---
// ./src/components/MainImage.astro
import { urlForImage } from "../sanity/lib/url-for-image"; 

const { mainImage, alt, class: className, ...rest } = Astro.props;

const imageUrl = urlForImage(mainImage).url();
const webpUrl = urlForImage(mainImage).format("webp").url();
---

<picture>
  <source srcset={webpUrl} type="image/webp" />
  <img class={className} {...rest} src={imageUrl} alt={alt} />
</picture>
